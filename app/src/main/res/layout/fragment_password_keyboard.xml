<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password_key"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technawabs.bankbuddy.fragments.PasswordKeyboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        android:padding="@dimen/dimen_16dp">

        <RelativeLayout
            android:id="@+id/password_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/password_num_1"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="@dimen/text_24sp" />

            <EditText
                android:id="@+id/password_num_2"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toEndOf="@+id/password_num_1"
                android:layout_toRightOf="@+id/password_num_1"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="@dimen/text_24sp" />

            <EditText
                android:id="@+id/password_num_3"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toEndOf="@+id/password_num_2"
                android:layout_toRightOf="@+id/password_num_2"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="@dimen/text_24sp" />

            <EditText
                android:id="@+id/password_num_4"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toEndOf="@+id/password_num_3"
                android:layout_toRightOf="@+id/password_num_3"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="@dimen/text_24sp" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/savePassCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_below="@+id/password_space"
            android:layout_marginEnd="@dimen/dimen_32dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:layout_marginStart="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_120dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Save"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_24sp" />

        </android.support.v7.widget.CardView>

        <!--<GridView-->
        <!--android:id="@+id/number_grid"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@+id/password_space"-->
        <!--android:numColumns="3"-->
        <!--&gt;</GridView>-->

    </RelativeLayout>

</FrameLayout>
