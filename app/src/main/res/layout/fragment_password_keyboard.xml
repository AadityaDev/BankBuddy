<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password_key"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technawabs.bankbuddy.fragments.PasswordKeyboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        android:padding="@dimen/dimen_16dp">

        <RelativeLayout
            android:id="@+id/password_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/password_num_1"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/password_num_2"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toEndOf="@+id/password_num_1"
                android:layout_toRightOf="@+id/password_num_1" />

            <TextView
                android:id="@+id/password_num_3"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toEndOf="@+id/password_num_2"
                android:layout_toRightOf="@+id/password_num_2" />

            <TextView
                android:id="@+id/password_num_4"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toEndOf="@+id/password_num_3"
                android:layout_toRightOf="@+id/password_num_3" />

        </RelativeLayout>


        <GridView
            android:id="@+id/number_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/password_space"
            android:numColumns="3"
            ></GridView>

    </RelativeLayout>

</FrameLayout>
